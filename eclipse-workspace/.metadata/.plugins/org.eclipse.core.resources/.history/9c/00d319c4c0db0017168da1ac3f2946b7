package hello;

public class palindrom {

	public static void main(String[] args) {
		
		int n,r,sum;
		n=153;
		int temp=n;
		sum=0;
		while(temp>0)
		{
			r=temp%10;
			sum=10*sum+r;
			temp=temp/10;// TODO Auto-generated method stub
		}
		if(temp==sum)
		{
			System.out.println("Number is palindrom");
		}
		else
		{
			System.out.println("Number is not a palindrom");
		}

	}

}
